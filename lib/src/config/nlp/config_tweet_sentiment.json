{
    "experiment": {
        "project_name": "test_tweet_sentiment",
        "description": "Binary, Large Dataset",
        "dataset": "tweet_sentiment",
        "version": 0,
        "nlp": true,
        "data_module": "tweet_sentiment_data_module",
        "model": "transformer_classifier",
        "restore_from_checkpoint": false
    },
    "hparams": {
        "label": "sentiment",
        "text": "text",
        "encoder_model": "bert-base-uncased",
        "positive_resample_rate" : 1,
        "disable_weight_scale": false,
        "nr_frozen_epochs": 1,
        "loader_workers": 8,
        "n_prev_text_samples": 0,
        "n_next_text_samples": 0,
        "n_prev_text_samples_sample_size": 4,
        "n_next_text_samples_sample_size": 4,
        "context_labels": "remove",
        "rich_labels": [],
        "batch_size": 32,
        "num_dense_layers": 3,
        "dense_layer_scale_factor": 0.8,
        "save_epoch_count": 4,
        "num_epochs": 3,
        "num_epochs_decay": 100,
        "accumulate_grad_batches": 1,
        "gradient_clip_val": 1,
        "dropout_p": 0.5,
        "early_stop_enabled": false,
        "learning_rate": 3e-5,
        "encoder_learning_rate": 1e-5,
        "train_ratio": 0.95,
        "validation_ratio": 0.025,
        "test_ratio": 0.025,
        "num_labels": 2,
        "unknown_index": 0
    },
    "validation": {
        "metric": "auroc",
        "metric_goal": "max",
        "check_val_every_n_epoch": 1,
        "val_check_interval": 0.1,
        "save_top_k": 1,
        "gradient_log_steps": 100,
        "param_log_steps": null
    },
    "sweep": {
        "method": "grid",
        "metric": {
            "name": "val_loss",
            "goal": "minimize"
        },
        "parameters": {
            "num_dense_layers": {
                "values": [
                    2,
                    4,
                    6
                ]
            }
        }
    }
}