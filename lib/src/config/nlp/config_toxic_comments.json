{
    "experiment": {
        "project_name": "test_sentiment_three",
        "description": "Multiclass, Multilabel Sample",
        "dataset": "toxic_comments",
        "version": 0,
        "data_module": "toxic_comment_data_module",
        "model": "multilabel_transformer_classifier",
        "encoder_model": "bert-base-uncased",
        "restore_from_checkpoint": false
    },
    "hparams": {
        "label": [
            "toxic",
            "severe_toxic",
            "obscene",
            "threat",
            "insult",
            "identity_hate"
        ],
        "text": "comment_text",
        "disable_weight_scale": false,
        "nr_frozen_epochs": 1,
        "loader_workers": 8,
        "n_prev_text_samples": 0,
        "n_next_text_samples": 0,
        "context_labels": "remove",
        "rich_labels": [],
        "batch_size": 32,
        "hidden_layer_sizes": [512, 256, 64],
        "save_epoch_count": 4,
        "num_epochs": 3,
        "num_epochs_decay": 100,
        "accumulate_grad_batches": 1,
        "gradient_clip_val": 1,
        "dropout_p": 0.5,
        "early_stop_enabled": false,
        "learning_rate": 3e-5,
        "encoder_learning_rate": 1e-5,
        "train_ratio": 0.90,
        "validation_ratio": 0.1,
        "test_ratio": 0.0,
        "num_labels": 6
    },
    "validation": {
        "check_val_every_n_epoch": 1,
        "val_check_interval": 0.5,
        "gradient_log_steps": 100,
        "param_log_steps": null
    },
    "sweep": {
        "method": "grid",
        "metric": {
            "name": "val/Accuracy",
            "goal": "maximize"
        },
        "parameters": {
            "num_dense_layers": {
                "values": [
                    [512, 256, 64],
                    [256, 64],
                    [512, 256, 128, 64]
                ]
            }
        }
    }
}