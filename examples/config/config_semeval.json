{
    "experiment": {
        "project_name": "Tweet_Sentiment_Example",
        "description": "Example on Multiclass Classification using SemEval Dataset",
        "dataset": "semeval",
        "version": 0,
        "data_module": "semeval_data_module",
        "model": "transformer_classifier",
        "restore_from_checkpoint": false
    },
    "metrics": {
        "multilabel": false,
        "tracked_metrics": [
            {
                "name": "accuracy",
                "average": "macro"
            },
            {
                "name": "auroc",
                "average": "macro"
            },
            {
                "name": "f1",
                "average": "macro"
            },
            {
                "name": "precision",
                "average": "macro"
            },
            {
                "name": "recall",
                "average": "macro"
            }
        ]
    },
    "hparams": {
        "label": "label",
        "label_map": {
            "1": "positive",
            "-1": "negative",
            "0": "neutral"
        },
        "text": "text",
        "positive_resample_rate": 5,
        "disable_weight_scale": false,
        "nr_frozen_epochs": 1,
        "loader_workers": 8,
        "encoder_model": "google/bert_uncased_L-2_H-128_A-2",
        "batch_size": 32,
        "save_epoch_count": 4,
        "max_epochs": 3,
        "num_epochs_decay": 100,
        "accumulate_grad_batches": 1,
        "gradient_clip_val": 1,
        "dropout_p": 0.5,
        "early_stop_enabled": false,
        "learning_rate": 3e-5,
        "encoder_learning_rate": 1e-5,
        "train_ratio": 0.70,
        "validation_ratio": 0.15,
        "test_ratio": 0.15,
        "num_labels": 3,
        "unknown_index": 0
    },
    "validation": {
        "metric": "val/AUROC",
        "metric_goal": "max",
        "check_val_every_n_epoch": 1,
        "val_check_interval": 0.5,
        "gradient_log_steps": 100,
        "param_log_steps": null
    },
    "sweep": {
        "name": "sweep_v1",
        "method": "bayes",
        "metric": {
            "name": "val_AUROC",
            "goal": "maximize"
        },
        "parameters": {
            "learning_rate": {
                "min": 1e-5,
                "max": 5e-4
            }
        }
    }
}
